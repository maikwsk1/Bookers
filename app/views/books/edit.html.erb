<div class="main">
  <body>
    <h1>Editing Book</h1>

 <% if @book.errors.any? %>
  <div class="error-summary">
    <%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:
    <% @book.errors.full_messages.each do |message| %>
      <ul>
