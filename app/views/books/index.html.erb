<h2>Books</h2>
<div class="main">
  <table>
    <thead>
      <tr>
        <td class="book-table"><b>Title</b></td>
        <td class="book-table"><b>Body</b></td>
        <td class="actions"><b>Actions</b></td>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td>
            <div class="action-links">
              <%= link_to "Show", book_path(book.id), class: "show-link" %>
              <%= link_to "Edit", edit_book_path(book.id), class: "edit-link" %>
              <%= link_to "Destroy", book_path(book.id), method: :delete, data: { confirm: "Are you sure?" }, class: "destroy-link" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="newbook-body">
    <h2>New book</h2>
    <%= form_with model: Book.new, url: books_path, method: :post, class: "new_book", id: "new_book", accept_charset: "UTF-8" do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>

      <h4>Body</h4>
      <%= f.text_area :body %>

      <div>
        <%= f.submit "Create Book" %>
      </div>
    <% end %>
  </div>
</div>
