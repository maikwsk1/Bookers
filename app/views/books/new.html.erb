 <h2>Books</h2>
 <div class="main">
  <body>
  <table>
    <thead>
      <tr>
        <td class="book-table"><b>Title</b></td>
        <td class="book-table"><b>Body</b></td>
        <td></td>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><a><%= link_to "Show", book_path(book.id) %></a></td>
          <td><a><%= link_to "Edit", edit_book_path(book.id) %></a></td>
          <td><a><%= link_to "Destroy", destroy_book_path(book.id), method: :delete %></a></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </body>

